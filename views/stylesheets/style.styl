terraTerra = rgb(232, 221, 203)
terra = rgb(205, 179, 128)
acqua = rgb(3, 101, 100) 
acquaProfonda = rgb(3, 54, 73)
abisso = rgb(3, 22, 52)

body
 font 24px "Lucida Grande", Helvetica, Arial, sans-serif
 background terraTerra

a
 color rgb(3, 101, 100)
 text-decoration none

.template
 display none

.file
 display none
 width 128px
 float left
 position absolute
 background transparent

.file .icon
 height 128px
 width 128px
 background url('/images/file.png') center center no-repeat
 text-align center
 padding 0px
 border 1px solid transparent
 border-radius 10px

.file .name
 color black
 text-align: center

.file .progress
 display none
 background-color white
 width 70px
 height 18px
 margin 80px 24px 20px 24px
 border-radius 10px
 border 1px solid
 padding 5px

.file .done
 background-color gray
 width 0px
 height 18px
 border-radius 10px

#user
 position: absolute
 top: 10px
 right: 10px
 border-radius 10px

#user .icon
 width 50px
 height 50px
 border-radius 10px
 vertical-align middle
 -webkit-box-shadow 0px 0px 5px 0px #000

#user .name
 font-size: 24px
 margin-left: 10px
 vertical-align: middle
 padding 0px 10px 0px 10px

.login
 display none
 cursor pointer
 border-radius 10px

.info
 display none

.info .logout
 display none
 position fixed
 top 45px
 right 20px

.file .name
 font-size: 18px

#headline
 display none
 font-size 32px
 position fixed
 top 70px
 right 0px
 bottom 70px
 left 0px
 text-align center
 vertical-align middle
 padding-top 100px
 overflow scroll
 z-index -2

#dropbox
 font-size 32px
 position fixed
 top 0px
 right 0px
 bottom 70px
 left 0px
 text-align center
 display table-cell
 vertical-align middle
 padding-top 100px
 overflow auto
 overflow-x hidden
 z-index -1

#trash
 display none
 position fixed
 right 0px
 bottom 70px
 background-color red
 height 200px
 width 200px
 background url(/images/trash.png) center center no-repeat

#pay
 position fixed
 display block
 left 0px
 right 0px
 bottom 100px
 height 300px

#paypal
 text-align center
 width 442px
 margin-left auto
 margin-right auto

.buy
 cursor pointer
 width 200px
 height 40px
 border-radius 10px
 margin 160px auto 0px auto
 padding-top 10px
 background-image -webkit-linear-gradient(top, terra 0%, terraTerra 100%)
 -webkit-box-shadow 0px 0px 5px 0px #000

.select
 text-align center
 border 1px solid transparent

.option
 color acqua
 cursor pointer
 float left
 margin 10px
 background-color acqua
 border-radius 10px
 width 120px
 height 120px
 background-image -webkit-linear-gradient(top, acquaProfonda 0%, abisso 100%)
 -webkit-box-shadow 0px 0px 5px 0px #000

.selected
 margin-top 0px
 width 140px
 height 140px 

.option .value
 display none

.option .head
 font-size 32px
 margin-top 25px

#status
 text-align center
 font-size 32px
 height 50px
 position fixed
 right -10px
 bottom 0px
 left -10px
 padding-top 20px 
 background-image -webkit-linear-gradient(top, acquaProfonda 0%, abisso 100%)
 -webkit-box-shadow inset 0px 5px 10px 0px #000

#transfer
 position fixed
 right 100px
 bottom 10px
 left 100px 
 width 300px
 height 30px
 margin auto
 border-radius 10px
 padding 5px
 background-image -webkit-linear-gradient(top, abisso 0%, acquaProfonda 120%)
 -webkit-box-shadow inset 0px 0px 10px 0px #000

#transfer .done
 width 0px
 height 30px
 border-radius 10px
 background-image -webkit-linear-gradient(top, acqua 0%, acquaProfonda 100%)

#upgrade
 position fixed
 padding 0px
 right 20px
 bottom 5px
 height 30px
 font-size 24px
 background-color rgb(3, 101, 100) - 100
 border-radius 10px
 padding 10px
